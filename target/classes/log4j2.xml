<?xml version="1.0" encoding="UTF-8"?>
<!-- PatternLayout symbol https://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/PatternLayout.html -->
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss,SSS}: Thread: %t \n %C{1}:  %msg %n"/>
        </Console>
        <File name="File"
              fileName="logs/AppLog.log"
              filePattern="logs/$${dd MMM yyyy HH:mm:ss,SSS}-%i.log.gz" append="true">
            <PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss,SSS}: Thread: %t \n %C{1}:  %msg %n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="5 MB"/>
            </Policies>
        </File>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>